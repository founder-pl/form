      let taxableIncome = annualRevenue;
      if (deductCosts && c.costsAllowed) {
        taxableIncome -= (annualCosts * (costsPercentage / 100));
      }
      
      // Apply tax brackets if available, otherwise use flat rate
      let incomeTax = 0;
      if (c.taxBrackets) {
